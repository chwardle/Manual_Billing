        <list_style/>
        <name>Request Approval</name>
        <onclick/>
        <order>1003</order>
        <script><![CDATA[var msg = '';
var error = false;

var query = 'revenue_unit=' + current.u_revenue_unit + '^approverISEMPTY';
var grA = new GlideRecord('x_soud2_manual_bil_revenue_unit_approvers');
grA.addEncodedQuery(query);
grA.setLimit(1);
grA.query();

if (grA.next()){
	msg = 'You do not have any approvers for this Adjustment Record: ' + grA.number;
	error = true;
}

if (error) {
	gs.addInfoMessage(msg);
	current.setAbortAction(true);
	action.setRedirectURL(current);
} else {
	var gr = new GlideRecord('x_soud2_manual_bil_adjustment_details');
	gr.addQuery('u_billing_adjustment',current.sys_id);
	gr.query();
	
	
	while (gr.next()) {		
		gr.approval = 'requested';
		gr.update();		
	}
	
	current.approval = 'requested';
	current.state = 2;
	current.update();
	action.setRedirectURL(current);
}

]]></script>
